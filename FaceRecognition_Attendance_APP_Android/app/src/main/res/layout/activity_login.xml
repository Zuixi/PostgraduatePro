<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_3085FC">

    <android.support.v4.widget.NestedScrollView
        style="@style/common_scrollview">

        <android.support.v7.widget.LinearLayoutCompat
            android:paddingRight="25dp"
            android:paddingLeft="25dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/white"
                android:textSize="20sp"
                android:text="账号"
                android:textStyle="bold"
                android:layout_marginTop="60dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:textColor="@color/white"
                android:textCursorDrawable="@null"
                android:layout_marginTop="48dp"
                android:textSize="18sp"
                android:textColorHint="@color/color_BCD8FE"
                android:hint="请输入账号"
                android:background="@color/transparent"
                android:id="@+id/edt_login_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <View
                android:layout_marginTop="14dp"
                android:background="@drawable/line_white_v"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
            <TextView
                android:textColor="@color/white"
                android:textSize="20sp"
                android:text="密码"
                android:textStyle="bold"
                android:layout_marginTop="60dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:textColor="@color/white"
                android:textCursorDrawable="@null"
                android:inputType="textPassword"
                android:layout_marginTop="48dp"
                android:textSize="18sp"
                android:textColorHint="@color/color_BCD8FE"
                android:hint="请输入密码"
                android:background="@color/transparent"
                android:id="@+id/edt_login_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <View
                android:layout_marginTop="14dp"
                android:background="@drawable/line_white_v"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
            <TextView
                android:id="@+id/tv_login_reg"
                android:layout_marginTop="80dp"
                android:drawablePadding="6dp"
                android:text="注册"
                android:drawableRight="@drawable/arrow_right"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </android.support.v7.widget.LinearLayoutCompat>


    </android.support.v4.widget.NestedScrollView>
    <android.support.v7.widget.CardView
        android:layout_alignParentBottom="true"
        app:cardElevation="0dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:id="@+id/cv_login"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="15sp"
            android:layout_margin="18dp"
            android:textColor="@color/color_3085FC"
            android:layout_gravity="center"
            android:text="登录"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </android.support.v7.widget.CardView>
</RelativeLayout>